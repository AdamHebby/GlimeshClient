{
    "name": "adamhebby/glimeshclient",
    "description": "PHP Client for GraphQL API on https://glimesh.tv/api",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "scripts": {
        "test": "phpunit"
    },
    "authors": [
        {
            "role": "Owner & Author",
            "name": "Adam Hebden",
            "email": "adam@adamhebden.com",
            "homepage": "https://github.com/AdamHebby"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/AdamHebby/GlimeshClientBuilder.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "GlimeshClient\\": "src/GlimeshClient/",
            "GlimeshClient\\Builder\\": "bin/Builder/"
        }
    },
    "suggest": {
        "monolog/monolog": "For Logging the Client usage (Any PSR Logger will work)",
        "symfony/cache": "For caching requests to Glimesh and reducing server load (Any PSR Cache will work)"
    },
    "require": {
        "php": ">=8.1.0",
        "guzzlehttp/guzzle": "^7.3",
        "psr/log": "^1.1",
        "adamhebby/php-graphql-client": "^2",
        "ratchet/pawl": "^0.4.1"
    },
    "require-dev": {
        "adamhebby/glimesh-client-builder": "dev-feature/BuilderExtractionAndUpgrades",
        "phpunit/php-code-coverage": "^9.2",
        "phpunit/phpunit": "^9.5",
        "monolog/monolog": "^2.3",
        "symfony/dotenv": "^5.3"
    }
}
